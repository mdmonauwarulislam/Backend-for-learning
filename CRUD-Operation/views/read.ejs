<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="../stylesheet/style.css" />
    <script src="https://cdn.tailwindcss.com"></script>
    <title>User creator crud</title>
  </head>
  <body>
    <div class="bg-zinc-900 w-full h-full text-white">
      <div class="px-16 pt-5">
        <a href="/" class="text-blue-500">Create Users</a>
      </div>
      <h1 class="text-3xl pt-16 pl-16">Created User</h1>
      <div class="users px-16 pt-5 pb-5 flex gap-4 flex-wrap">
        <% if(users.length > 0){ %>

            <% users.forEach(function(user){ %>

                <div class="user min-w-72 p-6 bg-zinc-800 rounded-lg">
                  <div class="w-full h-60 bg-zic-200 rounded-lg overflow-hidden">
                    <img class="w-full h-full object-cover object-center" src="<%= user.imageUrl %>" alt="">
                  </div>
                  <h2 class="text-xl text-white mt-3 px-2 w-full"><%= user.name %></h2>
                  <h6 class="text-white mt-1 pl-2 w-full">
                    <%= user.email %>
                  </h6>
                  <div class="flex justify-between px-2 mt-2">
                    <a href="/edit/<%= user._id %>" class="bg-green-600 text-white p-2 rounded-lg"
                      >Edit User</a
                    >
                    <a href="/delete/<%= user._id %>" class="bg-red-500 text-white p-2 rounded-lg"
                      >Delete User</a
                    >
                  </div>
                </div>
                <%})%>

        <% } else { %>
            <h3 class="text-2xl py-10 pl-5">No users yet</h3>
        <%}%>
        
      </div>
    </div>
  </body>
</html>
